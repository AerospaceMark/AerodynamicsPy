    "version": "0.2.0",
    "configurations": [

        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd":"${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        
        {
            "name": "Python: pressure_tests",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/my_tests/pressure_tests.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "cwd":"${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}